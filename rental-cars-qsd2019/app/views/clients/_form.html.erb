<% if @client.errors.any? %>
  <div class="ls-alert-danger">VocÃª deve corrigir os seguintes erros para continuar</div>
    <ul>
      <% @client.errors.values.each do |messages_group| %>
        <% messages_group.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
    <br>
<% end %>

<br>

<%= form_with(model: @client, local: true, class: "ls-form-horizontal") do
                                                              |form| %>
<label class="ls-label col-md-3">
  <%= form.label :name, 'Nome' %>
  <p class="ls-label-info">Modelo do Carro</p>
  <%= form.text_field :name %>
</label>

<label class="ls-label col-md-3">
  <%= form.label :email, 'Email' %>
    <p class="ls-label-info"></p>
  <%= form.text_field :email %>
</label>

<label class="ls-label col-md-3">
  <%= form.label :document, 'CPF' %>
  <p class="ls-label-info"></p>
  <%= form.text_field :document %>
</label>

<div class="ls-actions-btn">
  <%= form.submit 'Enviar', class: 'ls-btn-primary' %>
</div>

<% end %>
