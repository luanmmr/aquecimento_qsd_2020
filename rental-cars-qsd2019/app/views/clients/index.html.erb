<h1> Clientes </h1>

<% if @clients.any? %>
<ul>
  <% @clients.each do | client | %>
  <li><%= link_to client.name, client_path(client) %> | <%= client.email %></li>
  <% end %>
</ul>

<% else %>
<h3> Nenhuma filial cadastrada </h3>

<% end %>


