<h1 class="ls-title-intro ls-ico-users">Clientes</h1>

<% @clients.each do |client| %>
<div class="ls-list">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <h3><%= client.name %></h3>
    </div>
    <div class="col-md-3 ls-txt-right" id="client-<%= client.id %>">
      <%= link_to 'Editar', edit_client_path(client), class: "ls-btn" %>
      <%= link_to 'Deletar', client, class: "ls-btn-primary-danger
      ls-ico-remove", method: :delete, data: {confirm: 'Tem certeza?'}%>
    </div>
  </header>
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Email</span>
      <strong><%= client.email %></strong>
    </div>
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">CPF</span>
      <strong><%= client.document %></strong>
    </div>
  </div>
</div>
<br>
<% end %>

<br>

<%= link_to 'Registrar novo cliente', new_client_path,
            class: 'ls-btn-primary' %>

<br>
