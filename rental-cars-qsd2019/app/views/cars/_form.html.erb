<% if @car.errors.any? %>
  <div class="ls-alert-danger">VocÃª deve corrigir os seguintes erros para continuar</div>
    <ul>
      <% @car.errors.values.each do |messages_group| %>
        <% messages_group.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
    <br>
<% end %>

<%= form_with(model: @car, local: true, class: "ls-form row") do
                                                              |form| %>
<label class="ls-label col-md-3">
  <%= form.label :license_plate, 'Placa' %>
  <p class="ls-label-info">Ex: RBY1995</p>
  <%= form.text_field :license_plate %>
</label>

<label class="ls-label col-md-3">
  <%= form.label :color, 'Cor' %>
    <p class="ls-label-info"></p>
  <%= form.text_field :color %>
</label>

<label class="ls-label col-md-3">
  <%= form.label :mileage, 'Quilometragem' %>
  <p class="ls-label-info"></p>
  <%= form.text_field :mileage %>
</label>

<label class="ls-label col-md-4">
  <%= form.label :car_model_id, 'Modelo do Carro' %>
  <div class="ls-custom-select">
   <%= form.collection_select :car_model_id, @car_models, :id,
                             :full_description, class: "ls-custom" %>
  </div>
</label>

<label class="ls-label col-md-6">
  <%= form.label :subsidiary_id, 'Filial' %>
  <div class="ls-custom-select">
   <%= form.collection_select :subsidiary_id, @subsidiaries, :id,
                             :full_description, class: "ls-custom" %>
  </div>
</label>

<div class="ls-actions-btn">
  <%= form.submit 'Enviar', class: 'ls-btn-primary' %>
</div>

<% end %>
