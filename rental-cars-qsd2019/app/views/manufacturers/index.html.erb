<h1 class="ls-title-intro ls-ico-home">Fabricantes</h1>

<% if @manufacturers.empty? %>
<h4 class="ls-title-4"> Nenhuma fabricante cadastrada </h3>
<% else %>

  <% @manufacturers.each do |manufacturer| %>
  <div class="ls-list">
    <header class="ls-list-header">
      <div class="ls-list-title col-md-9">
       <h4 class="ls-title-4" ><%= manufacturer.name %></h4>
      </div>
      <div class="col-md-3 ls-txt-right" id="manufacturer-<%= manufacturer.id %>">
     <%= link_to 'Editar', edit_manufacturer_path(manufacturer), class: "ls-btn" %>
     <%= link_to 'Deletar', manufacturer, class: "ls-btn-primary-danger", method: :delete, data: {confirm: 'Tem certeza?'}%>
     </div>
    </header>
  </div>
  <% end %>
<% end %>
<br>
<%= link_to 'Registrar novo fabricante', new_manufacturer_path, class: 'ls-btn-primary' %>
