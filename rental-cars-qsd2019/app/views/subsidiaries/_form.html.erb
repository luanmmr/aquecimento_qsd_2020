<% if @subsidiary.errors.any? %>
<h3> <%= pluralize(@subsidiary.errors.count, 'falha') %> </h3>
<p> Você deve corrigir os seguintes erros para continuar: </p>

<ul>
  <% @subsidiary.errors.values.each do |messages_group| %>
  <% messages_group.each do |message| %>
  <li><%= message %></li>
  <% end %>
  <% end %>
</ul>
<% end %>

<%= form_with(model: @subsidiary, local: true) do |form| %>
<p>
  <%= form.label :name, 'Nome' %>
  <%= form.text_field :name %>
</p>
<p>
  <%= form.label :address, 'Endereço' %>
  <%= form.text_field :address %>
</p>
<p>
  <%= form.label :cnpj, 'CNPJ' %>
  <%= form.text_field :cnpj %>
</p>
<p>
  <%= form.submit 'Enviar' %>
</p>
<% end %>
